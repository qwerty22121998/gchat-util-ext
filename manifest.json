{
    "manifest_version": 3,
    "name": "GChat utility",
    "description": "GChat utility, include copy code block",
    "version": "1.2",
    "content_scripts": [
        {
            "matches": [
                "https://chat.google.com/*",
                "https://mail.google.com/*"
            ],
            "js": [
                "scripts/parent.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://chat.google.com/u/*/frame*"
            ],
            "all_frames": true,
            "js": [
                "scripts/frame.js"
            ],
            "css": [
                "css/style.css"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "tabs"
    ],
    "background": {
        "service_worker": "scripts/service_worker.js"
    },
    "icons": {
        "128": "icons/icon128.png"
    }
}